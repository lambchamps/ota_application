{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "src/**/*.spec.ts"]
}
